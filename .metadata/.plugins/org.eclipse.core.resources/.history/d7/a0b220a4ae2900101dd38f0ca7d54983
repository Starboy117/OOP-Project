var name = doucument.getElementId("name");
var username = doucument.getElementId("uname");
var email = doucument.getElementId("email");
var pass = doucument.getElementId("password");
var cpass = doucument.getElementId("cPassword");

var emailPattern = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;


function validateForm(){
	
	if(name.value.trim()===""){
		
		name.value="";
		name.style.borderColor = "red";
		document.getElementById("msg1").innerText = "**Name cannot be empty"
		
	}
	else{
		
		name.style.borderColor = "green";
		document.getElementById("msg1").innerText = ""
		
	}
	
	if(username.value.trim()===""){
			
			username.value="";
			username.style.borderColor = "red";
			document.getElementById("msg2").innerText = "**Username cannot be empty"
			
		}
		else{
			
			username.style.borderColor = "green";
			document.getElementById("msg2").innerText = ""
			
		}
		
	if(email.value.trim()===""){
					
					email.value="";
					email.style.borderColor = "red";
					document.getElementById("msg3").innerText = "**Email cannot be empty"
					
				}
				
	else if(!emailPattern.test(email)){
		
					email.value="";
					email.style.borderColor = "red";
					email.document.getElementById("msg3").innerText = "**Invalid email format"
	}
	else{
					
					email.style.borderColor = "green";
					document.getElementById("msg3").innerText = ""
					
				}
				
	if(pass.value.trim()===""){
							
					pass.value="";
					pass.style.borderColor = "red";
					pass.getElementById("msg4").innerText = "**Password cannot be empty"
							
		}
	else if(pass.length<6){
		
					pass.value="";
					pass.style.borderColor = "red";
					pass.getElementById("msg4").innerText = "**Password too short"
		
	}
		
	else if(cpass.value.trim()==""){
					cpass.value="";
					cpass.style.borderColor = "red";
					cpass.getElementById("msg5").innerText = "**Confirm password cannot be empty"		
		
	}
	else if(pass.value !== cpass.value){
					pass.value="";
					pass.style.borderColor = "red";
					cpass.value="";
					cpass.style.borderColor = "red";
					pass.getElementById("msg4").innerText = "**Passwords don't match"		
		
		
	}
	else{
							
				pass.style.borderColor = "green";
				document.getElementById("msg4").innerText = ""
				cpass.style.borderColor = "green";
				document.getElementById("msg5").innerText = ""
							
		}
}